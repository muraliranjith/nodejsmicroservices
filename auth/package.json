	"jest": {
		"testEnvironment": "node",
		"preset": "ts-jest"
	},
	"keywords": [],
	"author": "muralidharan",
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.20.1",
		"express": "^4.18.2",
		"express-validator": "^6.14.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.14",
		"@types/jest": "^29.2.3",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.11.10",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.45.1",
		"@typescript-eslint/parser": "^5.45.1",
		"eslint": "^8.28.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.2",
		"jest": "^29.3.1",
		"lint-staged": "^13.0.4",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.0",
		"supertest": "^6.3.1",
		"ts-jest": "^29.0.3"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run prettier:fix",
			"npm run lint",
			"npm run test",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}

